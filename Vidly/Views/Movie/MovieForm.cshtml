@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "Movie Form";
}

<h2>@Model.Title</h2>

<br/>
@using (Html.BeginForm("Save", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.MovieName)
        @Html.TextBoxFor(m => m.Movie.MovieName, new {@class = "form-control"})
    </div>
    <br/>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.DateAdded)
        @Html.TextBoxFor(m => m.Movie.DateAdded, new { @class = "form-control" })
    </div>
    <br />
    <div>
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
    </div>
    <br/>
    <div>
        @Html.LabelFor(m => m.Movie.NumberOfCopies)
        @Html.TextBoxFor(m => m.Movie.NumberOfCopies, new { @class = "form-control" })
    </div>
    <br/>
    @Html.HiddenFor(m => m.Movie.MovieID)
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}


